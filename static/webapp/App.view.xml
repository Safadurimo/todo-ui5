<mvc:View controllerName="Quickstart.App" displayBlock="true"
	xmlns="sap.m"
	xmlns:mvc="sap.ui.core.mvc"
	xmlns:l="sap.ui.layout"
	xmlns:core="sap.ui.core"
	xmlns:tnt="sap.tnt">
	<App id="app">
		<Page title="My Todo List">

			<footer>
				<OverflowToolbar id="otbFooter">
					<ToolbarSpacer/>
					<OverflowToolbarButton text="Add" icon="sap-icon://add" press=".onPress"/>

				</OverflowToolbar>
			</footer>
		</Page>

		<Page title="Create Task">
			<Input id="task" placeholder="Describe your Todo here">
			</Input>
			<Button type="Accept" text="Save" press=".onPressSave">
			</Button>


		</Page>
	</App>
</mvc:View>